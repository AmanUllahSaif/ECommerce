@model ECommerce.UI.Models.StockCollectionViewModel



<div class="row">
    <div class="col-sm-2 navparent" id="navHead">
        @Html.Label("Heading", new { @class = "control-label", @for = "Head" })
        @Html.DropDownList("Head", new SelectList(ViewBag.NavigationHeading, "Id", "Name"), "Select Navigation Heading", new { @class = "form-control" })
    </div>
    <div class="col-sm-2 navparent" id="navcate">
        @Html.Label("Category", new { @class = "control-label", @for = "Category" })
        @Html.DropDownList("Category", Enumerable.Empty<SelectListItem>(), "Select Navigation Category", new { @class = "form-control" })
    </div>
    <div class="col-sm-3">
        @Html.Label("Sub Category", new { @class = "control-label",@for= "Product_CategoryId" })
        @Html.DropDownList("SubCategory", Enumerable.Empty<SelectListItem>(), "Select Category", new { @class = "form-control", id= "Product_CategoryId" })
    </div>
    <div class="col-sm-3">
        @Html.LabelFor(x => x.Stocks[0].ProductId, new { @class = "control-label", @for= "Product_Id" })
        @Html.DropDownListFor(x => x.Stocks[0].ProductId, Enumerable.Empty<SelectListItem>(), "Select Product", new { @class = "form-control", id= "Product_Id" })
        @Html.ValidationMessageFor(x => x.Stocks[0].ProductId)
    </div>
    <div class="col-sm-2">
        @Html.LabelFor(x => x.Stocks[0].PurchasePrice, new { @class = "control-label" })
        @Html.TextBoxFor(x => x.Stocks[0].PurchasePrice, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Stocks[0].PurchasePrice)
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="table-responsive" id="tbl">

        </div>
    </div>
</div>