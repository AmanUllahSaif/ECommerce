@model ECommerce.UI.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
}

<div class="login-page">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <h3 class="w3ls-title w3ls-title1">Reset Password?</h3>
    <div class="login-body">
        @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post))
            {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.Code)
            @Html.TextBoxFor(m => m.Email, new { @class = "user", placeholder = "E-mail" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            @Html.PasswordFor(m => m.Password, new { @class = "user", placeholder = "New Password" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "user", placeholder = "Confirm Password" })
            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
            <input type="submit" value="Reset">
        }
    </div>
    <h6> Not a Member? <a href="@Url.Content("~/")Account/register">Sign Up Now »</a> </h6>
</div>


