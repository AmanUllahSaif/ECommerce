@model ECommerce.UI.Models.AttributeViewModel

@using Ecommerce.DAL.Enums

@using (Ajax.BeginForm("Save", "Attribute", new AjaxOptions {OnSuccess= "resetForm", HttpMethod = "POST", UpdateTargetId = "tbl" }))
{
    <div class="row">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <div class="col-sm-6">
                @Html.HiddenFor(x => x.Attribute.CategoryId, new { id="hdnCategoryId"})
                @Html.LabelFor(x => x.Attribute.Type, new { @class = "control-label" })
                @Html.DropDownListFor(x => x.Attribute.Type, EnumHelper.GetSelectList(typeof(AttributeType)), new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Attribute.Type)
            </div>
            <div class="col-sm-6">
                @Html.LabelFor(x => x.Attribute.Name, new { @class = "control-label" })
                @Html.TextBoxFor(x => x.Attribute.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Attribute.Name)
            </div>
        </div>
        <div class="form-group" id="valcontainer">
            <div class="attricontainer">
                <div class="col-sm-4">
                    @Html.LabelFor(x => x.Values[0].Value, new { @class = "control-label" })
                    @Html.TextBoxFor(x => x.Values[0].Value, new { @class = "form-control attrval" })
                    @Html.ValidationMessageFor(x => x.Values[0].Value, "", new { @class="validValue"})
                </div>
                <div class="col-sm-2" style="padding-top:37px">
                    <a href="javascript:;" class="btnadd"><i class="fa fa-plus-circle"></i></a>
                    <a href="javascript:;" class="btnrmv"><i class="fa fa-minus-circle"></i></a>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group text-right">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
}
